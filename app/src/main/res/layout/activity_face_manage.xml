<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FaceManageActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/storagePath"
            android:layout_marginTop="35dp"
            android:layout_marginHorizontal="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:lineSpacingMultiplier='1.25'

            android:text="@string/batch_process_notification_register"
            android:textSize="20sp"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/bulkRegistration"
            android:layout_marginTop="35dp"
            android:layout_marginHorizontal="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/storagePath"

            android:text="@string/batch_process_begin_register"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"

            android:onClick="batchRegister"/>

        <Button
            android:id="@+id/clearFace"
            android:layout_marginTop="35dp"
            android:layout_marginHorizontal="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bulkRegistration"

            android:text="@string/batch_process_clear_faces"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/circle_button"

            android:onClick="clearFaces"/>

        <TextView
            android:id="@+id/notification_register_result"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/clearFace"

            android:lineSpacingMultiplier='1.25'

            android:textSize="20sp"
            android:textColor="#000000" />
    </RelativeLayout>
</ScrollView>